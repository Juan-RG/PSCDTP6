# Coms:   Ejemplo de Makefile para la práctica 5 de PSCD
#         "make -f Makefile_p5_e1_e2" construye todos los ejecutables
#         "make -f Makefile_p5_e1_e2 Cliente" construye "Cliente"
#         ....
#         Es necesario descomentar la línea 28 para poder compilar en hendrix
#*****************************************************************

#---------------------------------------------------------
CC=g++

CLIENT=MainPublicador
MULTI_SERVER=MainServerDespliegue
SERVER_LINDA=ServidorLinda
MONITOR_LINDA=MonitorServidor
MONITOR=MonitorConexiones
SOCKET_DIR=Socket
SOCKET=${SOCKET_DIR}/Socket
LINDA_DRIVER=LindaDriver
TUPLA=Tupla

CPPFLAGS=-I. -I${SOCKET_DIR} -O2 -std=c++11 -lsockets # Flags compilacion
LDFLAGS=-pthread # Flags linkado threads

all: ${CLIENT} ${MULTI_SERVER}  ${SERVER_LINDA}
#----------------------------------------------------------------------------
#Para gestionar opciones de compilación según la máquina: hendrix tiene sus manías
#Descomentar la siguiente línea para compilar en hendrix
#SOCKETSFLAGS=-lsocket -lnsl
#-----------------------------------------------------------
# CLIENTE
# Compilacion
${CLIENT}.o: ${CLIENT}.cpp
	${CC} -c ${CPPFLAGS} ${CLIENT}.cpp

######## SOBRA
# Linkado
#${CLIENT}: ${TUPLA}.o ${LINDA_DRIVER}.o ${SOCKET}.o ${CLIENT}.o
#	${CC} ${LDFLAGS} ${TUPLA}.o ${LINDA_DRIVER}.o ${SOCKET}.o ${CLIENT}.o -o ${CLIENT} ${SOCKETSFLAGS}
########

#-----------------------------------------------------------
#-----------------------------------------------------------
# MONITOR
# Compilacion
${MONITOR}.o: ${MONITOR}.hpp ${MONITOR}.cpp
	${CC} -c ${CPPFLAGS} ${MONITOR}.cpp -o ${MONITOR}.o

# MONITOR
# Compilacion
${LINDA_DRIVER}.o: ${LINDA_DRIVER}.hpp ${LINDA_DRIVER}.cpp
	${CC} -c ${CPPFLAGS} ${LINDA_DRIVER}.cpp -o ${LINDA_DRIVER}.o

${TUPLA}.o: ${TUPLA}.hpp ${TUPLA}.cpp
	${CC} -c ${CPPFLAGS} ${TUPLA}.cpp -o ${TUPLA}.o

# Linkado
${CLIENT}: ${TUPLA}.o ${SOCKET}.o ${CLIENT}.o
	${CC} ${LDFLAGS} ${LINDA_DRIVER}.o ${TUPLA}.o ${SOCKET}.o ${CLIENT}.o -o ${CLIENT} ${SOCKETSFLAGS}
#-----------------------------------------------------------

#-----------------------------------------------------------
# SERVIDOR MULTICLIENTE
# Compilacion
${MULTI_SERVER}.o: ${MULTI_SERVER}.cpp 
	${CC} -c ${MULTI_SERVER}.cpp

# Linkado
${MULTI_SERVER}: ${MONITOR}.o ${SOCKET}.o ${MULTI_SERVER}.o
	${CC} ${LDFLAGS} ${MONITOR}.o ${SOCKET}.o ${MULTI_SERVER}.o -o ${MULTI_SERVER} ${SOCKETSFLAGS}
#-----------------------------------------------------------
# SERVIDORLINDA
# Compilacion
${SERVIDORLINDA}.o: ${SERVIDORLINDA}.cpp
	${CC} -c ${SERVIDORLINDA}.cpp

# Linkado
${SERVIDORLINDA}: ${SERVIDORLINDA}.o ${TUPLA}.o ${SOCKET}.o ${MONITOR_LINDA}.o
	${CC} ${LDFLAGS} ${MONITOR_LINDA}.o ${SOCKET}.o ${SERVIDORLINDA}.o ${TUPLA}.o -o ${SERVIDORLINDA} ${SOCKETSFLAGS}
#-----------------------------------------------------------
# MONITOR_LINDA
# Compilacion
${MONITOR_LINDA}.o: ${MONITOR_LINDA}.cpp
	${CC} -c ${MONITOR_LINDA}.cpp

# Linkado
${MONITOR_LINDA}: ${TUPLA}.o
	${CC} ${LDFLAGS} ${MONITOR_LINDA}.o ${TUPLA}.o -o ${SERVIDORLINDA}
#-----------------------------------------------------------
# SOCKETS
# Compilacion libreria de Sockets
${SOCKET}.o: ${SOCKET}.hpp ${SOCKET}.cpp
	${CC} -c ${CPPFLAGS} ${SOCKET}.cpp -o ${SOCKET}.o
#-----------------------------------------------------------	
# LIMPIEZA
clean:
	$(RM) ${SOCKET}.o
	$(RM) ${MONITOR}.o
	$(RM) ${CLIENT} ${CLIENT}.o
	$(RM) ${MULTI_SERVER} ${MULTI_SERVER}.o
	$(RM) ${MULTI_SERVER} ${MULTI_SERVER}.o
